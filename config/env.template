# ====================================
# 精灵1号 - Spirit One 环境配置
# ====================================
# 复制此文件为 .env 并填写你的配置

# 服务端口
GATEWAY_PORT=3100

# ====================================
# 飞书配置 (必须)
# ====================================
FEISHU_APP_ID=your_feishu_app_id
FEISHU_APP_SECRET=your_feishu_app_secret
FEISHU_VERIFICATION_TOKEN=your_verification_token
FEISHU_ENCRYPT_KEY=your_encrypt_key

# ====================================
# AI 服务商配置 (至少配置一个)
# ====================================

# 硅基流动 (推荐，支持多模型)
SILICONFLOW_API_KEY=sk-xxx
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-V3

# DeepSeek
DEEPSEEK_API_KEY=sk-xxx
DEEPSEEK_MODEL=deepseek-chat

# OpenAI
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# 月之暗面 Kimi
MOONSHOT_API_KEY=sk-xxx
MOONSHOT_MODEL=moonshot-v1-8k

# 智谱 AI
ZHIPU_API_KEY=xxx
ZHIPU_MODEL=glm-4

# ====================================
# Moltbot 配置 (可选，用于高级功能)
# ====================================
MOLTBOT_GATEWAY_URL=http://localhost:3000
MOLTBOT_HOOK_PATH=/hooks
MOLTBOT_HOOK_TOKEN=your_hook_token
MOLTBOT_DEFAULT_AGENT=SpiritAgent
MOLTBOT_HOOK_CHANNEL=last

# ====================================
# 数据库配置 (可选，用于持久化)
# ====================================
# DATABASE_URL=postgresql://user:password@localhost:5432/spirit_one
# REDIS_URL=redis://localhost:6379

# ====================================
# 安全配置
# ====================================
# 敏感操作确认超时（秒）
CONFIRM_TIMEOUT=60

