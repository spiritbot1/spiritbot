{
  "name": "spirit-one-desktop",
  "version": "0.8.0",
  "description": "精灵1号 - 你的数字生命伴侣 (桌面版)",
  "main": "out/main/main.js",
  "author": "Spirit One Team",
  "homepage": "https://github.com/spiritbot1/spiritbot",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac-intel": "npm run build && electron-builder --mac --x64",
    "dist:mac-arm": "npm run build && electron-builder --mac --arm64",
    "dist:mac-universal": "npm run build && electron-builder --mac --universal",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "playwright-core": "^1.58.1"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.spiritone.desktop",
    "productName": "精灵1号",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "../libs/moltbot",
        "to": "moltbot",
        "filter": [
          "dist/**/*",
          "node_modules/**/*",
          "docs/**/*",
          "package.json",
          "moltbot.mjs"
        ]
      },
      {
        "from": "resources/spirit-float-small.png",
        "to": "spirit-float-small.png"
      },
      {
        "from": "resources/spirit-transparent.png",
        "to": "spirit-transparent.png"
      },
      {
        "from": "resources/spirit-icon.png",
        "to": "spirit-icon.png"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "spiritbot1",
      "repo": "spiritbot",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "精灵1号 ${version}"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "icon": "resources/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
